{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "removeComments": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts",],
  "exclude": ["node_modules"]
}
